<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="xpanse-js-sdk" type="host">*.xpanse.one</value>
                <value id="mastercard-js-sdk" type="host">*.mastercard.com</value>
                <value id="discovercard-js-sdk" type="host">*.discovercard.com</value>
                <value id="discover-js-sdk" type="host">*.discover.com</value>
                <value id="visa-js-sdk" type="host">*.visa.com</value>
                <value id="amex-js-sdk" type="host">*.aexp-static.com</value>
                <value id="online-metrix-js-sdk" type="host">*.online-metrix.net</value>
                <value id="payway-js-sdk" type="host">*.payway.com.au</value>
                <value id="nuvei-js-sdk" type="host">*.safecharge.com</value>
                <value id="skybank-js-sdk" type="host">*.skybankgateway.com</value>
                <value id="metricsglobal-js-sdk" type="host">*.metricsglobalgateway.com</value>
                <value id="nmi-js-sdk" type="host">*.nmi.com</value>
                <value id="mg-satellites-js-sdk" type="host">*.transactiongateway.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="xpanse-api-connect" type="host">*.xpanse.one</value>
                <value id="mastercard-api" type="host">*.mastercard.com</value>
                <value id="discover-api" type="host">*.discover.com</value>
                <value id="discovercard-api" type="host">*.discovercard.com</value>
                <value id="advancedpaymentscert-api" type="host">advancedpaymentscert.com</value>
                <value id="advancedpaymentscert-api2" type="host">*.advancedpaymentscert.com</value>
                <value id="payway-api" type="host">*.payway.com.au</value>
                <value id="nuvei-api" type="host">*.safecharge.com</value>
                <value id="skybank-api" type="host">*.skybankgateway.com</value>
                <value id="metricsglobal-api" type="host">*.metricsglobalgateway.com</value>
                <value id="nmi-api" type="host">*.nmi.com</value>
                <value id="mg-satellites-api" type="host">*.transactiongateway.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="xpanse-form-style" type="host">*.xpanse.one</value>
                <value id="mastercard-style" type="host">*.mastercard.com</value>
                <value id="google-style" type="host">*.googleapis.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="xpanse-frame" type="host">*.xpanse.one</value>
                <value id="mastercard-frame" type="host">*.mastercard.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="xpanse-img" type="host">*.xpanse.one</value>
                <value id="mastercard-img" type="host">*.mastercard.com</value>
                <value id="discover-img" type="host">*.discovercard.com</value>
                <value id="online-metrix-img" type="host">*.online-metrix.net</value>
                <value id="google-img" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="google-fonts" type="host">*.gstatic.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
